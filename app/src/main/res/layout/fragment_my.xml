<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_my_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:icon_left="@mipmap/ic_setting"

        app:size_title="19sp"
        app:title="我的" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_below="@+id/tb_my_title"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_my_head" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_head"
                    android:text="登录 | 注册？"
                    android:textColor="@color/cl_E03D1C"
                    android:textSize="16sp" />


                <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_head"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cl_E03D1C"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_moeny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/cl_B3B3B3"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_certification"
                        android:layout_width="68dp"
                        android:layout_height="17dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/cl_999999"
                        android:gravity="center"
                        android:text="未认证"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:background="#fff2ed"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="XXX先生 已升级成为钻石客户"
                    android:textColor="@color/cl_4D4D4D"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:background="@color/cl_ff8200"
                    android:gravity="center"
                    android:text="激活VIP"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="31dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_certification"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/shape_bg_white">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_certification" />

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_left"
                android:text="我的认证"
                android:textColor="@color/cl_404040"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_two_certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_left"
                android:text="未认证"
                android:textColor="@color/cl_F34F03"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_next" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_card"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_bg_white">

            <ImageView
                android:id="@+id/iv_left_card"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_card" />

            <TextView
                android:id="@+id/tv_left_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_left_card"
                android:text="银行卡"
                android:textColor="@color/cl_404040"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_next" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_help"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_bg_white">

            <ImageView
                android:id="@+id/iv_left_help"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_help" />

            <TextView
                android:id="@+id/tv_left_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_left_help"
                android:text="帮助中心"
                android:textColor="@color/cl_404040"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_next" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:visibility="gone"
        android:layout_below="@+id/card_view"
        android:layout_marginTop="31dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_certification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="18dp"
            android:drawableTop="@mipmap/ic_certification"
            android:gravity="center"
            android:text="我的认证"
            android:textColor="@color/cl_404040"
            android:textSize="15sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/c" />

        <TextView
            android:id="@+id/tv_money_management"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="18dp"
            android:drawableTop="@mipmap/ic_money_setting"
            android:gravity="center"
            android:text="红包管理"
            android:textColor="@color/cl_404040"
            android:textSize="15sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/c" />

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="18dp"
            android:drawableTop="@mipmap/ic_card"
            android:gravity="center"
            android:text="银行卡管理"
            android:textColor="@color/cl_404040"
            android:textSize="15sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/c" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:background="@color/c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:visibility="gone"
        android:layout_below="@+id/view"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="18dp"
            android:drawableTop="@mipmap/ic_help"
            android:gravity="center"
            android:text="帮助中心"
            android:textColor="@color/cl_404040"
            android:textSize="15sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/c" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="18dp"
            android:drawableTop="@mipmap/ic_"
            android:gravity="center"
            android:text="更多产品"
            android:textColor="@color/cl_404040"
            android:textSize="15sp" />


        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/c" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="18dp"
            android:drawableTop="@mipmap/ic_money"
            android:gravity="center"
            android:text="邀请好友"
            android:textColor="@color/cl_404040"
            android:textSize="15sp"
            android:visibility="invisible" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/c" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_all"
        android:layout_marginBottom="36dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ic_message"
            android:gravity="center"
            android:text="官方公众号"
            android:textColor="@color/cl_999999"
            android:textSize="11sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_call_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ic_phone"
            android:gravity="center"
            android:text="联系客服"
            android:textColor="@color/cl_999999"
            android:textSize="11sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ic_qq"
            android:gravity="center"
            android:text="在线客服"
            android:textColor="@color/cl_999999"
            android:textSize="11sp"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cl_999999"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:visibility="gone"
            android:textColor="@color/cl_EA1616"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>