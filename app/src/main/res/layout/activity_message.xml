<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bar_icon_back_black"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            />

        <RadioGroup
            android:id="@+id/rgTools"
            android:layout_width="165dp"
            android:layout_height="26.5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rb_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_bill"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/authorization_left"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bill_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="@string/authorization_right"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RadioGroup>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1">


    </FrameLayout>

</LinearLayout>