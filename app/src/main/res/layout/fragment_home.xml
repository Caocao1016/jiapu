<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/sp_banner"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            app:banner_pageChangeDuration="1000"
            app:banner_pointAutoPlayAble="true"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
            app:banner_pointTopBottomMargin="15dp"
            app:banner_transitionEffect="alpha" />

        <com.vondear.rxui.view.RxTextViewVerticalMore
            android:id="@+id/upview1"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="29dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="21dp"
            android:text="申请金额(元)"
            android:textColor="@color/cl_4D4D4D"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22.5dp"
            android:text="5000.00"
            android:textColor="@color/cl_F34F03"
            android:textSize="39sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="36dp">

            <LinearLayout
                android:id="@+id/rl_bar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/tv_money_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_bar"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:text="1000"
                android:textColor="@color/cl_4D4D4D"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_money_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rl_bar"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="1dp"
                android:text="5000"
                android:textColor="@color/cl_4D4D4D"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_auction_rectangle"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/cl_F34F03" />

            <TextView
                android:id="@+id/tv_time_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_auction_rectangle"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/cl_F34F03" />

            <TextView
                android:id="@+id/tv_money_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_auction_rectangle"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/cl_F34F03" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_window"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/shape_auction_rectangle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:text="借款用途："
                android:textColor="@color/cl_F34F03" />

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:hint="请选择实际资金用途"
                android:textColor="@color/cl_B3B3B3"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_window"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:textColor="@color/cl_F34F03"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@mipmap/ic_home_next" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_true"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/ic_button_bg"
            android:gravity="center"
            android:text="立即申请"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="33dp"
            >

            <View
                android:layout_width="37dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/cl_F34F03" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="本平台拒绝向学生提供贷款服务"
                android:textColor="@color/cl_F34F03"
                android:textSize="10sp" />

            <View
                android:layout_width="37dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_vertical"
                android:background="@color/cl_F34F03" />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>