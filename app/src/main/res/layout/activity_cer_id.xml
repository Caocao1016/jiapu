<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_id_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon_right="@mipmap/ic_refresh"
        app:size_title="19sp"
        app:title="身份证识别" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:background="@mipmap/ic_id_bg">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="67dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="23dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_my_head" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="42dp"
                    android:layout_toRightOf="@+id/iv_head"
                    android:text="游客"
                    android:textColor="@color/cl_E03D1C"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/iv_head"
                    android:text="手机号：1234567890"
                    android:textColor="@color/cl_B3B3B3"
                    android:textSize="12sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_zm"
                android:layout_width="256dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_id_zm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="点击拍摄身份证正面（人面像）"
                android:textColor="@color/cl_737373"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_fm"
                android:layout_width="256dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_id_fm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="点击拍摄身份证背面（国徽像）"
                android:textColor="@color/cl_737373"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="9dp"
                android:background="@mipmap/ic_cer_button"
                android:gravity="center"
                android:text="开始认证"
                android:textColor="@color/white"
                android:layout_marginBottom="6dp"
                android:textSize="19sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>